{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "types": ["@cloudflare/workers-types/2023-07-01"],
    "exactOptionalPropertyTypes": false,
    "baseUrl": "src",
    "jsx": "react-jsx",
    "paths": {
      "@assets/*": ["assets/*"],
      "@config": ["config.ts"],
      "@components/*": ["components/*"],
      "@content/*": ["content/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "exclude": ["dist"]
}
